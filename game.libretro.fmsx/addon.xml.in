<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.fmsx"
		name="Microsoft - MSX (fMSX)"
		version="6.0.0.30"
		provider-name="Marat Fayzullin">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.msx.keyboard" version="1.0.0"/>
		<import addon="game.controller.msx.joystick" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>MSX</platforms>
		<extensions>rom|mx1|mx2|dsk|fdi|cas|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>Non-commercial</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.fmsx</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Microsoft - MSX (fMSX) 4.9</summary>
		<description lang="da_DK">fMSX er en MSX-emulator skrevet af Marat Fayzullin. Den emulerer MSX, MSX2 og MSX2+ 8-bit hjemmecomputere.</description>
		<description lang="en_GB">fMSX is a MSX emulator written by Marat Fayzullin. It emulates MSX, MSX2, and MSX2+ 8-bit home computers.</description>
		<description lang="zh_CN">fMSX 是由 Marat Fayzullin 编写的 MSX 模拟器。它模拟 MSX、MSX2 和 MSX2+ 8位家用计算机。</description>
	</extension>
</addon>
